{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "g++ - Build and Debug Active File",
      "type": "cppdbg",
      "request": "launch",
      "program": "${fileDirname}/SFMLApp",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "miDebuggerPath": "/ucrt64/bin/gdb.exe",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
      "preLaunchTask": "build"
    }
  ]
}
